{
  "expo": {
    "name": "Secure File Storage",
    "slug": "secure-file-storage-rn",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.securefilestorage.app",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs access to camera to take photos for upload.",
        "NSPhotoLibraryUsageDescription": "This app needs access to photo library to select images for upload.",
        "NSDocumentsFolderUsageDescription": "This app needs access to documents to manage your files."
      }
    },
    "android": {
      "package": "com.securefilestorage.app",
      "versionCode": 1,
      "permissions": [
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.CAMERA"
      ]
    },
    "plugins": [
      "expo-document-picker",
      "expo-image-picker",
      "expo-media-library"
    ]
  }
}